    "version": "0.2.0",
    "configurations": [
      {
        "name": "C++ Debug",
        "type": "cppdbg",
        "request": "launch",
//        "program": "${workspaceFolder}/output/debug/jspec}",
        "args": ["test_bunched_cooling_04.txt"],
//        "cwd": "${workspaceFolder}/debug",
        "environment": [],
        "externalConsole": false,
        "linux": {
            "program": "${workspaceFolder}/output/debug/jspec",
            "cwd": "${workspaceFolder}/debug",
            "MIMode": "gdb"
        },
        "windows": {
            "program": "${workspaceFolder}\\output\\debug\\jspec.exe",
            "cwd": "${workspaceFolder}\\debug",
            "MIMode": "gdb",
            "miDebuggerPath": "${config:gcc.path}\\gdb.exe",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
        }
      }
    ]
  }
  
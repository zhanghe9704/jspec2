{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387

    "version": "0.2.0",
    "configurations": [
    
      {
        "name": "C++ Debug",
        "type": "cppdbg",
        "request": "launch",
        "args": ["${config:jspec.inputfile}"],
        "environment": [],
        "externalConsole": false,
        "linux": {
            "program": "${workspaceFolder}/output/debug/jspec",
            "cwd": "${workspaceFolder}/debug",
            "MIMode": "gdb"
        },
        "windows": {
            "program": "${workspaceFolder}\\output\\debug\\jspec.exe",
            "cwd": "${workspaceFolder}\\debug",
            "MIMode": "gdb",
            "miDebuggerPath": "${config:gcc.path}\\gdb.exe",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
        }
      },
      {
        "name": "Run without debugging",
        "type": "cppdbg",
        "request": "launch",
        "linux": {
          "program": "${workspaceFolder}/output/debug/jspec",
          "cwd": "${workspaceFolder}/debug",
      },
      "windows": {
          "program": "${workspaceFolder}\\output\\debug\\jspec.exe",
          "cwd": "${workspaceFolder}\\debug",
          "MIMode": "gdb",
          "setupCommands": [
            {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
            }
          ]
      },
        "args": ["${config:jspec.inputfile}"],
        "stopAtEntry": false,
        "environment": [],
        "externalConsole": false
      }
    ]
  }
  
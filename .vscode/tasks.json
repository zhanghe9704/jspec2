{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-O0",
                "-Wall",
                "-Wextra",
                "${workspaceFolder}/src/*.cc",
                "-I${workspaceFolder}/include",
                "-lgsl",
                "-lgslcblas",
                "-L${workspaceFolder}/lib",
                "-lm",
                "-l:libmuparser.so.2",
                "-o",
                "${workspaceFolder}/output/debug/jspec"
            ],
            "group": "build"
        },
        {
            "label": "build-debug-windows",
            "type": "shell",
            "command": "C:\\mingw64\\bin\\x86_64-w64-mingw32-g++.exe",
            "args": [
                "-pg",
                "-O0",
                "-Wall",
                "-Wextra",
                "${workspaceFolder}\\src\\*.cc",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "-lgsl",
                "-lcblas",
                "-lm",
                "-lmuparser",
                "-lgmon",
                "-o",
                "${workspaceFolder}\\output\\debug\\jspec.exe"
            ],
            "group": "build"
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                "${workspaceFolder}/src/*.cc",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lm",
                "-l:libmuparser.so.2",
                "-lgsl",
                "-lgslcblas",
                "-o",
                "${workspaceFolder}/output/release/jspec"
            ],
            "group": "build"
        },
        {
            "label": "build-release-windows",
            "type": "shell",
            "command": "C:\\mingw64\\bin\\x86_64-w64-mingw32-g++.exe",
            "args": [
                "-O3",
                "${workspaceFolder}\\src\\*.cc",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "-lm",
                "-lmuparser",
                "-lgsl",
                "-lcblas",
                "-static-libgcc",
                "-static-libstdc++",
                "-fopenmp",
                "-o",
                "${workspaceFolder}\\output\\release\\jspec"
            ],
            "group": "build"
        },
        {
            "label": "clean-debug",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/output/debug/*",
                "${workspaceFolder}/src/*.o"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "clean-debug-windows",
            "type": "shell",
            "command": "rm -Path ${workspaceFolder}\\output\\debug\\*.* -Recurse; rm -Path ${workspaceFolder}\\src\\*.o -Recurse",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "clean-release",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/output/release/*",
                "${workspaceFolder}/src/*.o"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "clean-release-windows",
            "type": "shell",
            "command": "rm -Path ${workspaceFolder}\\output\\release\\*.* -Recurse; rm -Path ${workspaceFolder}\\src\\*.o -Recurse",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "rebuild-debug",
            "type": "shell",
            "command": "",
            "dependsOn": [
                "clean-debug",
                "build-debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "rebuild-debug-windows",
            "type": "shell",
            "command": "",
            "dependsOn": [
                "clean-debug-windows",
                "build-debug-windows"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "rebuild-release",
            "type": "shell",
            "command": "",
            "dependsOn": [
                "clean-release",
                "build-release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "rebuild-release-windows",
            "type": "shell",
            "command": "",
            "dependsOn": [
                "clean-release-windows",
                "build-release-windows"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Release JSPEC",
            "type": "shell",
            "command": "${workspaceFolder}/output/release/jspec",
            "args": [
                "test_bunched_cooling_04.txt"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/debug"
            }
        },
        {
            "label": "Run Release JSPEC windows",
            "type": "shell",
            "command": "${workspaceFolder}\\output\\release\\jspec.exe",
            "args": [
                "test_bunched_cooling_04.txt"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}\\debug"
            }
        },
        {
            "label": "Run Debug JSPEC",
            "type": "shell",
            "command": "${workspaceFolder}/output/debug/jspec",
            "args": [
                "test_bunched_cooling_04.txt"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/debug"
            }
        },
        {
            "label": "Run Debug JSPEC windows",
            "type": "shell",
            "command": "${workspaceFolder}\\output\\debug\\jspec.exe",
            "args": [
                "test_bunched_cooling_04.txt"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}\\debug"
            }
        },
        {
            "label": "Check CWD",
            "type": "shell",
            "command": "echo Current working directory: $PWD",
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}